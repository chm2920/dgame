<% if flash[:notice] %>
<p style="text-align:center;color:#FF0000;"><%= flash[:notice] %></p>
<% end %>
<div class="reg-login">
	<div class="login">
		<h4>登录</h4>
		<%= form_tag "/users/login_rst" do %>
		<table>
			<tr>
				<td class="label">用户名：</td>
				<td><input type="text" name="login[username]" value="" class="ipt"></td>
			</tr>
			<tr>
				<td class="label">密码：</td>
				<td><input type="password" name="login[password]" value="" class="ipt"></td>
			</tr>
			<tr>
				<td class="label"></td>
				<td><input type="submit" name="submit" value="登录" class="sbt"></td>
			</tr>
		</table>
		<% end %>
	</div>
	<div class="reg">
		<h4>注册</h4>
		<%= form_tag "/users/reg_rst" do %>
		<table>
			<tr>
				<td class="label">用户名：</td>
				<td><input type="text" name="reg[username]" value="" class="ipt"></td>
			</tr>
			<tr>
				<td class="label">密码：</td>
				<td><input type="password" name="reg[password]" value="" class="ipt"></td>
			</tr>
			<tr>
				<td class="label"></td>
				<td><input type="submit" name="submit" value="注册" class="sbt"></td>
			</tr>
		</table>
		<% end %>
	</div>
</div>
